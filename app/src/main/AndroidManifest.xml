<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techwarriors.mavdriver">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"

        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ForgotPwd"
            android:label="@string/title_activity_forgot_pwd"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Start"
            android:label="@string/title_activity_start"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CurrentPickup"
            android:label="@string/title_activity_current_pickup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CurrentTrip"
            android:label="@string/title_activity_current_trip"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AssignRide"
            android:label="@string/title_activity_assign_ride"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LogInDriver"
            android:label="@string/title_activity_log_in_driver"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfirmAns"
            android:label="@string/title_activity_confirm_ans"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResetPass"
            android:label="@string/title_activity_reset_pass"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>